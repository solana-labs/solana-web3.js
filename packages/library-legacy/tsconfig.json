{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@solana/web3.js",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "declarations",
    "module": "esnext",
    "noImplicitReturns": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@types/jest": ["./test/__shadow-jest-types.d.ts"]
    }
  },
  "extends": "../tsconfig/base.json",
  "include": ["src", "test"],
  "exclude": ["declarations", "lib", "node_modules"]
}
